@model SacramentPlanner.Models.Speaker

@{
    ViewData["Title"] = "Add Speaker";
}

<h4>Speaker</h4>
<hr />
<div class="row">
    <div class="col-md-4">
      <form asp-action="AddSpeaker">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
          <input asp-for="ID" type="hidden" class="form-control" />
          <span asp-validation-for="ID" class="text-danger"></span>
        </div>
        <div class="form-group">
          <label asp-for="Name" class="control-label"></label>
          <input asp-for="Name" class="form-control"/>
          <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
          <label asp-for="Topic" class="control-label"></label>
          <input asp-for="Topic" class="form-control"/>
          <span asp-validation-for="Topic" class="text-danger"></span>
        </div>

        <div class="form-group">
          <input type="submit" value="Add Speaker" class="btn btn-default" />
        </div>
      </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
