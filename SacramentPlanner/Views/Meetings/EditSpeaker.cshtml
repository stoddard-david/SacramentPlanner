@model SacramentPlanner.Models.Speaker

@{
    ViewData["Title"] = "Edit Speaker";
}

<h2>Edit Speaker</h2>

<h4>Speaker</h4>
<hr />
<div class="row">
    <div class="col-md-4">
      <form asp-action="EditSpeaker">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="ID" />
        <div class="form-group">
          <label asp-for="Name" class="control-label"></label>
          <input asp-for="Name" class="form-control" />
          <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
          <label asp-for="Topic" class="control-label"></label>
          <input asp-for="Topic" class="form-control" />
          <span asp-validation-for="Topic" class="text-danger"></span>
        </div>
        <div class="form-group">
          <input asp-for="MeetingID" type="hidden" class="form-control" />
          <span asp-validation-for="MeetingID" class="text-danger"></span>
        </div>
        <div class="form-group">
          <input type="submit" value="Save" class="btn btn-default" />
        </div>
      </form>
    </div>
</div>

<div>
  <a asp-action="Details" asp-route-id="@Model.MeetingID">Back to the Program</a> |
  <a asp-action="Index">Back to Meeting List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
