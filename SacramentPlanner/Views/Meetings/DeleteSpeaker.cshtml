@model SacramentPlanner.Models.Speaker

@{
    ViewData["Title"] = "Remove Speaker";
}

<h2>Remove Speaker from Agenda</h2>

<h3>Are you sure you want to remove them?</h3>
<div>
    <h4>Speaker</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Topic)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Topic)
        </dd>
    </dl>
    
    <form asp-action="DeleteSpeaker">
      <input type="hidden" asp-for="ID" />
      <input type="hidden" asp-for="MeetingID" />
      <input type="submit" value="Remove" class="btn btn-default" /><br />
      <a asp-action="Details" asp-route-id="@Model.MeetingID">Back to the Program</a> |
      <a asp-action="Index">Back to Meeting List</a>
    </form>
</div>
